<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Movie Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  
  <link rel="stylesheet" href="userdashboard.css">
</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="profile-header">
        <img src="https://static.vecteezy.com/system/resources/previews/022/419/985/non_2x/human-simple-line-icon-on-white-background-free-vector.jpg">
        <div class="name">Welcome : <%=viewprof[0].username%></div>
      </div>

      <a href="/" class="nav-link active" onclick="loadContent('home')"><i class="fas fa-home me-2"></i>Home</a>
      <a href="#" class="nav-link" onclick="loadContent('search')"><i class="fas fa-search me-2"></i>Search</a>
      <a href="#" class="nav-link" onclick="loadContent('movies')"><i class="fas fa-video me-2"></i>View Movies</a>
      <a href="#" class="nav-link" onclick="loadContent('details')"><i class="fas fa-info-circle me-2"></i>View Profile</a>
      <a href="#" class="nav-link" onclick="loadContent('subscribe')"><i class="fas fa-bell me-2"></i>Subscribe</a>
      <a href="#" class="nav-link" onclick="loadContent('rate')"><i class="fas fa-star me-2"></i>Rate</a>
      <a href="#" class="nav-link" onclick="loadContent('comment')"><i class="fas fa-comment me-2"></i>Comment</a>
      <a href="/" class="nav-link" onclick="loadContent('logout')"><i class="fas fa-sign-in-alt me-2"></i>Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
      <h2>Welcome to the User Dashboard</h2>
      <p>Select an option from the left sidebar to begin.</p>
    </div>
  </div>

  <!-- JavaScript for Dynamic Content Switching -->
  <script>
    function loadContent(section) {
      // Highlight active link
      document.querySelectorAll('.sidebar a').forEach(link => link.classList.remove('active'));
      event.target.classList.add('active');

      // Simple content rendering logic
      const content = {
        home: `<h2>üè† Home</h2><p>This is the home page of your dashboard.</p>`,
        search: `<h2>üîç Search Movies</h2><p>You can search movies here.</p>`,
        movies:  `cd`,
        details: `
                  <div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
          <h3 class="mb-0">üë§ User Profile</h3>
        </div>

        <div class="card-body bg-light">
          <form>
            <div class="mb-3">
              <label class="form-label fw-semibold">Username</label>
              <input type="text" class="form-control" value="<%= viewprof[0].username %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Password</label>
              <input type="text" class="form-control" value="<%= viewprof[0].password %>">
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Confirm Password</label>
              <input type="text" class="form-control" value="<%= viewprof[0].confirmpassword %>">
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Email</label>
              <input type="email" class="form-control" value="<%= viewprof[0].email %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Contact</label>
              <input type="text" class="form-control" value="<%= viewprof[0].contact %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">City</label>
              <input type="text" class="form-control" value="<%= viewprof[0].city %>" readonly>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Role</label>
              <input type="text" class="form-control" value="<%= viewprof[0].role %>" readonly>
            </div>
          </form>
        </div>

        <div class="card-footer text-center bg-white border-0">
          <button class="btn btn-outline-primary px-4" onclick="editProfile()"><a href="/updateuser?userid=<%= viewprof[0].uid%>">‚úèÔ∏è Edit Profile</a></button>
        </div>
      </div>

    </div>
  </div>
</div>

                `,
        subscribe: `<h2>üîî Subscribe</h2><p>Manage your subscriptions here.</p>`,
        rate: `<h2>‚≠ê Rate Movies</h2><p>Rate your favorite movies.</p>`,
        comment: `<h2>üí¨ Comment</h2><p>Leave your comments and feedback here.</p>`,
        // logout: ``
      };

      // Update content area
      document.getElementById("mainContent").innerHTML = content[section] || `<h2></h2>`;
    }
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
 