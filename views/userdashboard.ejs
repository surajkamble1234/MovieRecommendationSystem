<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Movie Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  
  <link rel="stylesheet" href="userdashboard.css">
</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="profile-header">
        <img src="https://static.vecteezy.com/system/resources/previews/022/419/985/non_2x/human-simple-line-icon-on-white-background-free-vector.jpg">
        <div class="name"><%=viewprof[0].username%></div>
      </div>

      <a href="/" class="nav-link active" onclick="loadContent('home')"><i class="fas fa-home me-2"></i>Home</a>
      <a href="#" class="nav-link" onclick="loadContent('search')"><i class="fas fa-search me-2"></i>Search</a>
      <a href="#" class="nav-link" onclick="loadContent('movies')"><i class="fas fa-video me-2"></i>View Movies</a>
      <a href="#" class="nav-link" onclick="loadContent('details')"><i class="fas fa-info-circle me-2"></i>View Profile</a>
      <a href="#" class="nav-link" onclick="loadContent('subscribe')"><i class="fas fa-bell me-2"></i>Subscribe</a>
      <a href="#" class="nav-link" onclick="loadContent('rate')"><i class="fas fa-star me-2"></i>Rate</a>
      <a href="#" class="nav-link" onclick="loadContent('comment')"><i class="fas fa-comment me-2"></i>Comment</a>
      <a href="#" class="nav-link" onclick="loadContent('logout')"><i class="fas fa-sign-in-alt me-2"></i>Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
      <h2>Welcome to the User Dashboard</h2>
      <p>Select an option from the left sidebar to begin.</p>
    </div>
  </div>

  <!-- JavaScript for Dynamic Content Switching -->
  <script>
    function loadContent(section) {
      // Highlight active link
      document.querySelectorAll('.sidebar a').forEach(link => link.classList.remove('active'));
      event.target.classList.add('active');

      // Simple content rendering logic
      const content = {
        home: `<h2>🏠 Home</h2><p>This is the home page of your dashboard.</p>`,
        search: `<h2>🔍 Search Movies</h2><p>You can search movies here.</p>`,
        movies:  `cd`,
        details: `
  <div class="container mt-5">
    <h2 class="text-center mb-4">👤 User Profile Details</h2>
    
    <div class="row justify-content-center">
      <div class="col-12 col-md-11 col-lg-10">
        <table class="table table-bordered table-striped table-hover table-sm text-center">
          <thead class="table-dark">
            <tr>
              <th>Username</th>
              <th>Password</th>
              <th>Confirm<br>Password</th>
              <th>Email</th>
              <th>Contact</th>
              <th>City</th>
              <th>Role</th>
              <th>Update</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%=viewprof[0].username%></td>
              <td><%=viewprof[0].password%></td>
              <td><%=viewprof[0].confirmpassword%></td>
              <td><%=viewprof[0].email%></td>
              <td><%=viewprof[0].contact%></td>
              <td><%=viewprof[0].city%></td>
              <td><%=viewprof[0].role%></td>
              <td><a href="#" class="btn btn-sm btn-warning px-3">Update</a></td>
              <td><a href="#" class="btn btn-sm btn-danger px-3">Delete</a></td>
            </tr>
          </tbody>
        </table>

        <div class="text-center mt-4">
          <button class="btn btn-primary" onclick="editProfile()">Edit Profile</button>
        </div>
      </div>
    </div>
  </div>
`

,
        subscribe: `<h2>🔔 Subscribe</h2><p>Manage your subscriptions here.</p>`,
        rate: `<h2>⭐ Rate Movies</h2><p>Rate your favorite movies.</p>`,
        comment: `<h2>💬 Comment</h2><p>Leave your comments and feedback here.</p>`,
        logout: `<h2>🚪 Logout</h2><p>You have been logged out.</p>`
      };

      // Update content area
      document.getElementById("mainContent").innerHTML = content[section] || `<h2>Page not found</h2>`;
    }
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
 