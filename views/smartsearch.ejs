<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Recommendations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h1 class="text-center">Movie Recommendations</h1>

    <form action="/search" method="GET" class="text-center mb-4">
        <input type="text" name="q" placeholder="Search for a movie..." class="form-control w-50 mx-auto">
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    <% if (errorMsg) { %>
        <p class="text-danger text-center"><%= errorMsg %></p>
    <% } %>

    <div class="row">
        <% movies.forEach(movie => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="<%= movie.poster_path ? 'https://image.tmdb.org/t/p/w500' + movie.poster_path : '/default.jpg' %>" class="card-img-top" alt="<%= movie.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= movie.title %></h5>
                        <p class="card-text"><%= movie.overview %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
