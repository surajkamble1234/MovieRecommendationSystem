<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ViewMovie</title>
  
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    td {
      white-space: nowrap;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h4 class="text-center mb-4 text-primary">Movie Details</h4>

    <div class="mb-3">
      <input type="text" name="search" class="form-control" placeholder="Search..." onkeyup="ajaxfile(this.value)">
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-nowrap">
        <thead class="table-primary text-center">
          <tr>
            <th>SR.NO</th>
            <th>Title</th>
            <th>Description</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Language</th>
            <th>Country</th>
            <th>Budget</th>
            <th>Revenue</th>
            <th>Runtime</th>
            <th>Poster</th>
            <th>Trailer</th>
            <th>Movie</th>
          </tr>
        </thead>
        <tbody id="tblbody">
          <% if(viewm.length > 0) {
            viewm.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= item.title %></td>
                <td><%= item.description %></td>
                <td><%= item.release_date %></td>
                <td><%= item.genre %></td>
                <td><%= item.director %></td>
                <td><%= item.language %></td>
                <td><%= item.country %></td>
                <td><%= item.budget %></td>
                <td><%= item.revenue %></td>
                <td><%= item.runtime %></td>
                <td><a href="<%= item.poster_url %>" target="_blank" class="btn btn-sm btn-outline-primary">View</a></td>
                <td><a href="<%= item.trailer_url %>" target="_blank" class="btn btn-sm btn-outline-success">Watch</a></td>
                <td><a href="<%= item.movie_url %>" target="_blank" class="btn btn-sm btn-outline-danger">Play</a></td>
              </tr>
          <% }) 
          } else { %>
            <tr>
              <td colspan="14" class="text-center text-muted">No movies available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Your AJAX file -->
  <script src="/ajaxfile.js"></script>
</body>
</html>
