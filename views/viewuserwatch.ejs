<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Watchlist</title>

  <!-- Bootstrap 4 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous">

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      height: 100vh;
      background: linear-gradient(135deg, #74ebd5, #acb6e5);
      overflow-x: hidden;
    }

    .sidebar {
      background-color: #343a40;
      height: 100vh;
      padding: 30px 15px;
      color: white;
      position: fixed;
      width: 220px;
    }

    .sidebar h4 {
      text-align: center;
      margin-bottom: 30px;
      font-weight: bold;
    }

    .sidebar a {
      color: #ffffff;
      display: block;
      padding: 8px 0;
      text-decoration: none;
      font-size: 15px;
    }

    .sidebar a:hover {
      color: #ffc107;
    }

    .content {
      margin-left: 240px;
      padding: 30px;
    }

    .table-container {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .table thead {
      background-color: #007bff;
      color: white;
    }

    h2.message {
      text-align: center;
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      color: #333;
      font-weight: bold;
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h4>MovieZone</h4>
    <a href="/dashboard">Dashboard</a>
    <a href="/movies">Movies</a>
    <a href="/rating">Rate a Movie</a>
    <a href="/watchlist">Watchlist</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Content -->
  <div class="content">
    <% if(viewatch.length > 0){ %>
      <div class="table-container">
        <h3 class="text-center mb-4 font-weight-bold">Your Watchlist</h3>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Sr. No</th>
              <th>Title</th>
              <th>Poster URL</th>
              <th>Trailer URL</th>
              <th>Movie URL</th>
            </tr>
          </thead>
          <tbody>
            <% viewatch.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= item.title %></td>
                <td><img src="<%= item.poster_url %>" target="_blank" width="40px" height="60px"></td>
                <td><a href="<%= item.trailer_utl %>" target="_blank">Trailer</a></td>
                <td><a href="<%= item.movie_url %>" target="_blank">Movie</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <h2 class="message">There is no movie in your watchlist</h2>
    <% } %>
  </div>

</body>
</html>
