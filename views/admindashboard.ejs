<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Movies Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      overflow-x: hidden;
    }
    .sidebar {
      min-height: 100vh;
    }
    .card-icon {
      font-size: 2rem;
    }
    .sidebar .nav-link {
      color: #fff;
      cursor: pointer;
    }
    .sidebar .nav-link.active {
      background-color: #343a40;
      border-radius: 0.375rem;
    }
    .navbar-brand {
      color: #fff;
    }
    .content-section {
      display: none;
    }
    .content-section.active {
      display: block;
    }
    .table td, .table th {
      vertical-align: middle;
      white-space: nowrap;
    }
    body {
     overflow-x: hidden; /* Disables horizontal scroll */
    }

    .table td, .table th {
     word-break: break-word;
     white-space: normal;
     }

  </style>
</head>
<body>
  <!-- Navbar (Mobile) -->
  <nav class="navbar navbar-dark bg-dark d-md-none">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <span class="navbar-brand">Movies Dashboard</span>
    </div>
  </nav>

  <!-- Layout -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="offcanvasSidebar" class="col-md-2 col-lg-2 d-md-block bg-black sidebar offcanvas-md offcanvas-start text-white p-3">
        <h4 class="text-center">ðŸŽ¬ Admin Panel</h4>
        <hr />
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link active" data-section="dashboardSection"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" data-section="reviewSection"><i class="bi bi-person-badge me-2"></i>Review Accounts</a></li>
          <li class="nav-item"><a class="nav-link" data-section="recommendationSection"><i class="bi bi-stars me-2"></i>Recommendations</a></li>
          <li class="nav-item"><a class="nav-link" data-section="categorySection"><i class="bi bi-tags me-2"></i>Create Categories</a></li>
          <li class="nav-item"><a class="nav-link" data-section="moviesSection"><i class="bi bi-film me-2"></i>All Movies</a></li>
          <li class="nav-item"><a class="nav-link" data-section="usersSection"><i class="bi bi-people me-2"></i>Users</a></li>
          <li class="nav-item"><a class="nav-link" data-section="reviewsSection"><i class="bi bi-chat-dots me-2"></i>Reviews</a></li>
          <li class="nav-item"><a class="nav-link" data-section="settingsSection"><i class="bi bi-gear me-2"></i>Settings</a></li>
        </ul>
      </nav>

      <!-- Main Content -->
      <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4 pt-4">
        <div class="d-flex justify-content-between align-items-center pb-3">
          <h2>Welcome, <%=viewuserdata[0].username%></h2>
          <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" width="40" height="40" class="rounded-circle" alt="Admin" />
        </div>

        <!-- Dashboard Section -->
        <div id="dashboardSection" class="content-section active">
          <div class="row text-white">
            <div class="col-sm-6 col-md-3 mb-3">
              <div class="card bg-primary text-center p-3">
                <div class="card-icon mb-2"><i class="bi bi-people-fill"></i> </div>
                 <a href="/moviee">addmovie</a>
              </div>
            </div>
            <div class="col-sm-6 col-md-3 mb-3">
              <div class="card bg-success text-center p-3">
                <div class="card-icon mb-2"><i class="bi bi-film"></i></div>
                <h5><%=totalMovies%></h5>
                <p>Total Movies</p>
              </div>
            </div>
            <div class="col-sm-6 col-md-3 mb-3">
              <div class="card bg-warning text-dark text-center p-3">
                <div class="card-icon mb-2"><i class="bi bi-star-fill"></i></div>
                <h5>0</h5>
                <p>Recommendations</p>
              </div>
            </div>
            <div class="col-sm-6 col-md-3 mb-3">
              <div class="card bg-danger text-center p-3">
                <div class="card-icon mb-2"><i class="bi bi-chat-dots"></i></div>
                <h5>0</h5>
                <p>Reviews</p>
              </div>
            </div>
          </div>

          <div class="card mt-4">
            <div class="card-header d-flex justify-content-between">
              <span>Recent Activities</span>
              <button class="btn btn-sm btn-primary">Add</button>
            </div>
            <div class="card-body p-0">
              <table class="table mb-0">
                <thead class="table-light">
                  <tr>
                    <th>User</th>
                    <th>Movie</th>
                    <th>Rating</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td colspan="6" class="text-center text-muted">No activity yet.</td></tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- All Movies Section -->
        <div id="moviesSection" class="content-section">
          <div class="row text-white">
            <div class="col-md-4 mb-4">
              <div class="card bg-dark text-white h-100">
                <img src="https://image.tmdb.org/t/p/w500/8UlWHLMpgZm9bx6QYh0NFoq67TZ.jpg" class="card-img-top" alt="Movie 1">
                <div class="card-body">
                  <h5 class="card-title">Movie Title 1</h5>
                  <p class="card-text">Short description for movie 1</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="card bg-dark text-white h-100">
                <img src="https://image.tmdb.org/t/p/w500/bOGkgRGdhrBYJSLpXaxhXVstddV.jpg" class="card-img-top" alt="Movie 2">
                <div class="card-body">
                  <h5 class="card-title">Movie Title 2</h5>
                  <p class="card-text">Short description for movie 2</p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="card bg-dark text-white h-100">
                <img src="https://image.tmdb.org/t/p/w500/fnbjcRDYN8zTiT6d6GqhB4O5GLY.jpg" class="card-img-top" alt="Movie 3">
                <div class="card-body">
                  <h5 class="card-title">Movie Title 3</h5>
                  <p class="card-text">Short description for movie 3</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Other Sections -->
        <div id="reviewSection" class="content-section"><p class="text-white">Review Accounts Section</p></div>
        <div id="recommendationSection" class="content-section"><p class="text-white">Recommendations Section</p></div>
        <div id="categorySection" class="content-section"><p class="text-white">Create Categories Section</p></div>
         <div id="usersSection" class="content-section">
  <p class="text-white">Users Section</p>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-12">
        <table class="table table-bordered table-striped table-hover table-sm text-center align-middle w-100">
          <% if(viewuserdata && viewuserdata.length > 0){ %>
            <thead class="table-dark">
             
              <tr>
                <th>Username</th>
                <th>Password</th>
                <th>ConfirmPassword</th>
                <th>Email</th>
                <th>Contact</th>
                <th>City</th>
                <th>Role</th>
                <th>Update</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% viewuserdata.forEach(function(user){ %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.password %></td>
                  <td><%= user.confirmpassword %></td>
                  <td><%= user.email %></td>
                  <td><%= user.contact %></td>
                  <td><%= user.city %></td>
                  <td><%= user.role %></td>
                  <td>
                    <a href="/updateadmin?userid=<%= user.uid %>" class="btn btn-sm btn-warning">Update</a>
                  </td>
                  <td>
                    <a href="/delbyuser?userid=<%= user.uid %>" class="btn btn-sm btn-danger">Delete</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          <% } else { %>
            <tbody>
              <tr>
                <td colspan="9" class="text-center">No user data available.</td>
              </tr>
            </tbody>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</div>

        <div id="reviewsSection" class="content-section"><p class="text-white">Reviews Section</p></div>
        <div id="settingsSection" class="content-section"><p class="text-white">Settings Section</p></div>
      </main>
    </div>
  </div>

  <!-- JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.querySelectorAll('.nav-link[data-section]').forEach(link => {
      link.addEventListener('click', function () {
        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
        this.classList.add('active');

        document.querySelectorAll('.content-section').forEach(sec => sec.classList.remove('active'));
        const sectionId = this.getAttribute('data-section');
        document.getElementById(sectionId).classList.add('active');
      });
    });
  </script>
</body>
</html>
