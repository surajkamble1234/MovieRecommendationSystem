<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Movies Dashboard</title>

  <!-- Bootstrap + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>

  <style>
    body {
      background-color: #f8f9fa;
      margin: 0;
      overflow-x: hidden;
    }
    .sidebar {
      width: 160px;
      background-color: #000;
      color: white;
      min-height: 100vh;
      position: fixed;
    }
    .sidebar .nav-link {
      color: #fff;
      padding: 10px;
    }
    .sidebar .nav-link.active,
    .sidebar .nav-link:hover {
      background-color: #343a40;
      border-radius: 5px;
    }
    .poster-img {
      width: 60px;
      height: 90px;
      object-fit: cover;
    }
    .main-content {
      margin-left: 160px; /* Matches sidebar width */
      padding: 20px;
    }
    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        width: 100%;
        height: auto;
      }
      .main-content {
        margin-left: 0;
        margin-top: 20px;
      }
    }
  </style>
</head>
<body>

<div class="d-flex flex-wrap">
  <!-- Sidebar -->
  <div class="sidebar p-3">
    <h4 class="text-white">ðŸŽ¬ User Dashboard</h4>
    <hr style="border-color: #666;">
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="userdashboard.html" class="nav-link"><i class="bi bi-house-door"></i> Home</a>
      </li>
      <li>
        <a href="/userviewmove" class="nav-link active"><i class="bi bi-film"></i> View Movies</a>
      </li>
      <li>
        <a href="profile.html" class="nav-link"><i class="bi bi-person"></i> Profile</a>
      </li>
      <li>
        <a href="logout.html" class="nav-link"><i class="bi bi-box-arrow-right"></i> Logout</a>
      </li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content flex-grow-1">
    <div class="container-fluid">

      <!-- User Dashboard Cards -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card text-bg-primary shadow">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-collection-play"></i> Total Movies Watched</h5>
              <p class="card-text fs-4">120</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-bg-success shadow">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-star-fill"></i> Recommended for You</h5>
              <p class="card-text">Action, Sci-Fi, Thriller</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-bg-warning shadow">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-bookmark-heart"></i> Watchlist</h5>
              <p class="card-text fs-4">8 Movies</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Filter + Search -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
        <h5 class="text-primary">ðŸŽ¬ Movie Details</h5>
        <div class="d-flex gap-2 flex-wrap">
          <select name="genre" id="movie" class="form-select form-select-sm w-auto" onchange="ajaxfile(this.value)">
            <option value="">Select Genre</option>
            <option value="action">Action</option>
            <option value="adventure">Adventure</option>
          </select>
          <input type="text" class="form-control form-control-sm w-auto" placeholder="Search..." onkeyup="ajaxfile(this.value)">
        </div>
      </div>

      <!-- Movie Table -->
      <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover align-middle text-nowrap small">
          <thead class="table-dark text-center">
           <tr>
                <th>SR.NO</th>
                <th>Title</th>
                <th>Description</th>
                <th>Release Date</th>
                <th>Genre</th>
                <th>Director</th>
                <th>Language</th>
                <th>Country</th>
                <th>Budget</th>
                <th>Revenue</th>
                <th>Runtime</th>
                <th>Poster</th>
                <th>Trailer</th>
                <th>Movie</th>
                <th>Watchlist</th>
                <th>rating</th>
                <th>recommend</th>
              </tr>
          </thead>
          <tbody id="tblbody">
            <% if (viewm.length > 0) {
              viewm.forEach((item, index) => { %>
              <tr class="text-center align-middle">
                <td><%= index + 1 %></td>
                <td class="text-truncate" style="max-width: 150px;"><%= item.title %></td>
                <td><%= item.description %></td>
                <td><%= item.release_date %></td>
                <td><%= item.genre %></td>
                <td><%= item.director %></td>
                <td><%= item.language %></td>
                <td><%= item.country %></td>
                <td>$<%= item.budget %></td>
                <td>$<%= item.revenue %></td>
                <td><%= item.runtime %> min</td>
                 <td>
                  <img src="<%= item.poster_url %>" class="rounded shadow-sm" style="width: 40px; height: 60px; object-fit: cover;" />
                </td>
                <td>
                  <a href="<%= item.trailer_url %>" target="_blank" class="btn btn-sm btn-success">
                    <i class="bi bi-play-circle"></i>
                  </a>
                </td>
                <td>
                  <a href="<%= item.movie_url %>" target="_blank" class="btn btn-sm btn-danger">
                    <i class="bi bi-film"></i>
                  </a>
                </td>
                <td>
                  <a href="/watchlist?mid=<%= item.mid %>" class="btn btn-sm btn-warning">
                    <i class="bi bi-plus-circle"></i>
                  </a>
                </td>
                <td>
                  <a href="/ratinguser?mid=<%= item.mid %>" class="btn btn-sm btn-warning">
                    <i class="bi bi-plus-circle"></i>
                  </a>
                </td>

                 <td>
                  <a href="/recommended?mid=<%= item.mid %>" class="btn btn-sm btn-warning">
                    <i class="bi bi-plus-circle"></i>
                  </a>
                </td>

              </tr>
            <% }) } else { %>
              <tr>
                <td colspan="14" class="text-center text-muted">No movies found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/ajaxfile.js"></script>

</body>
</html>
