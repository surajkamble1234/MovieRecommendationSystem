<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Recommended Movies</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    .sidebar {
      width: 220px;
      background-color: #343a40;
      color: white;
      height: 100vh;
      padding-top: 20px;
      position: sticky;
      top: 0;
      flex-shrink: 0;
    }

    .sidebar a {
      color: white;
      display: block;
      padding: 10px 20px;
      text-decoration: none;
    }

    .sidebar a:hover {
      background-color: #495057;
    }

    .main-content {
      padding: 2rem;
      background-color: #f8f9fa;
      min-height: 100vh;
      flex-grow: 1;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 100% !important;
        height: auto;
      }
    }
  </style>
</head>
<body class="bg-light">

  <!-- Mobile Navbar -->
  <nav class="navbar navbar-dark bg-dark d-md-none">
    <div class="container-fluid">
      <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
        <i class="bi bi-list"></i>
      </button>
      <span class="navbar-brand ms-2">ðŸŽ¬ Dashboard</span>
    </div>
  </nav>

  <div class="d-flex">
    <!-- Sidebar for desktop -->
    <div class="sidebar d-none d-md-block">
      <h4 class="text-white mb-3 ps-3  " style="font-size: 1.3em;">ðŸŽ¬ User Dashboard</h4>
      <hr style="border-color: #555;" />
      <ul class="nav flex-column">
        <li class="nav-item"><a href="/" class="nav-link active"><i class="bi bi-house-door me-2"></i>Home</a></li>
        <li class="nav-item"><a href="/userviewmove" class="nav-link"><i class="bi bi-film me-2"></i>View Movies</a></li>
        <li class="nav-item"><a href="/viewrecommended" class="nav-link"><i class="bi bi-star-fill me-2"></i>Recommendation</a></li>
        <li class="nav-item"><a href="/mywatchlist" class="nav-link"><i class="bi bi-bookmark-check me-2"></i>My Watchlist</a></li>
        <li class="nav-item"><a href="/" class="nav-link"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
      </ul>
    </div>

    <!-- Sidebar for mobile -->
    <div class="offcanvas offcanvas-start sidebar d-md-none" tabindex="-1" id="mobileSidebar">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title text-white">ðŸŽ¬ User Dashboard</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
      </div>
      <hr style="border-color: #555;" />
      <ul class="nav flex-column">
        <li class="nav-item"><a href="/" class="nav-link active"><i class="bi bi-house-door me-2"></i>Home</a></li>
        <li class="nav-item"><a href="/userviewmove" class="nav-link"><i class="bi bi-film me-2"></i>View Movies</a></li>
        <li class="nav-item"><a href="/viewrecommended" class="nav-link"><i class="bi bi-star-fill me-2"></i>Recommendation</a></li>
        <li class="nav-item"><a href="/mywatchlist" class="nav-link"><i class="bi bi-bookmark-check me-2"></i>My Watchlist</a></li>
        <li class="nav-item"><a href="/" class="nav-link"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container">
        <h2 class="text-center mb-4">Recommended Movies</h2>

        <% if (viewreco.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle text-center shadow">
              <thead class="table-dark">
                <tr>
                  <th>Sr. No</th>
                  <th>Title</th>
                  <th>Poster</th>
                  <th>Trailer</th>
                  <th>Watch</th>
                </tr>
              </thead>
              <tbody>
                <% viewreco.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.title %></td>
                    <td>
                      <img src="<%= item.poster_url %>" alt="Poster" class="rounded" style="width: 60px; height: 90px; object-fit: cover;" />
                    </td>
                    <td>
                      <a href="<%= item.trailer_url %>" target="_blank" class="btn btn-sm btn-warning">
                        <i class="bi bi-play-circle"></i> Trailer
                      </a>
                    </td>
                    <td>
                      <a href="<%= item.movie_url %>" target="_blank" class="btn btn-sm btn-success">
                        <i class="bi bi-play-circle"></i> Watch
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info text-center mt-4">
            <h5>No popular movies available at the moment.</h5>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
